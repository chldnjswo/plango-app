<resources>
    <style name="MbtiButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="cornerRadius">18dp</item>
        <item name="strokeColor">@color/mbti_stroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="backgroundTint">@color/mbti_bg_default</item>
        <item name="android:textColor">@color/mbti_text_default</item>
        <item name="android:elevation">6dp</item>
        <item name="rippleColor">@android:color/transparent</item>
    </style>

    <!-- DatePicker 전용 테마 -->
    <style name="MyDatePickerTheme" parent="Theme.MaterialComponents.Light.Dialog">

        <!-- 헤더 색상 -->
        <item name="colorPrimary">#E07559</item>
        <item name="colorAccent">#E07559</item>
        <item name="android:headerBackground">#E07559</item>

        <!-- 버튼 스타일 지정 -->
        <item name="android:buttonBarPositiveButtonStyle">@style/MyDialogButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/MyDialogButton</item>

    </style>

    <!-- DatePickerDialog의 OK/Cancel 버튼에 적용 -->
    <style name="MyDialogButton" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:textColor">#E07559</item>
    </style>
    <style name="AppTheme.FullscreenDialog" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowFullscreen">true</item>

        <item name="android:windowIsFloating">false</item>

        <!-- 배경색 → 네가 설정한 앱 배경과 동일하게 -->
        <item name="android:windowBackground">@color/background_default</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>

    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>


</resources>